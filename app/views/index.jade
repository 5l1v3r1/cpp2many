extends layout

block content

    .jumbotron(style='padding: 1em;')
        img(src='cpp2many.png', height='128', align='left', style='margin-right: 24px;')
        h1
            b cpp2many
        p Convert simple C++ programs to Python, Java, Pascal and Ada


    form(role='form', method='POST', action='/'+uuid)

        .row

            .col-xs-2

                button.btn.btn-default.btn-block(type='button', onclick='set_sample()')
                    i.fa.fa-pencil
                    span &nbsp; Sample

            .col-xs-6

            .col-xs-2
                .text-right
                    select#lang(name='lang', class='form-control')
                        option(value='python') Python
                        option(value='java') Java
                        option(value='pascal' selected='selected') Pascal
                        option(value='ada') Ada

            .col-xs-2
                .text-right
                    button.btn.btn-primary.btn-block(type='submit')
                        i.fa.fa-paper-plane-o
                        span &nbsp; Submit

        input(type='hidden', name='code', value='')
        #editor(class='form-control', style='margin-top: 12px;')

    include information

    a(href='https://github.com/jutge-org/cpp2many')
        img(style='position: fixed; top: 0; right: 0; border: 0; z-index: 9999;', src='https://camo.githubusercontent.com/365986a132ccd6a44c23a9169022c0b5c890c387/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67', alt='Fork me on GitHub', data-canonical-src='https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png')

    script.
        start_index()

